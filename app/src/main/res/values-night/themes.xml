<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AlertoBulakenyo" parent="Theme.MaterialComponents.DayNight">
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="EditTextBlue" parent="Theme.MaterialComponents.DayNight" >
        <item name="colorControlNormal">#003366</item>
        <item name="colorControlActivated">#003366</item>
        <item name="colorControlHighlight">#003366</item>
    </style>

    <style name="EditTextOrange" parent="Theme.MaterialComponents.DayNight" >
        <item name="colorControlNormal">#ff5003</item>
        <item name="colorControlActivated">#ff5003</item>
        <item name="colorControlHighlight">#ff5003</item>
    </style>

    <style name="SwitchSettings" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">#ff5003</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/dark_blue</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_blue</item>
    </style>

</resources>