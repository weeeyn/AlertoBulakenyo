<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GetStarted" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/get_started" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/img"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:maxLines="13"
                android:minLines="5"
                android:text="Alerto Bulakenyo is a mobile application for disaster warning and risk communication in the selected cities and municipalities of Bulacan province. This app informs users about disaster occurrences, locates the nearest evacuation facilities in their area, and provides preparedness tips and emergency hotlines."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="18dp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnGetStarted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rounded_button"
            android:padding="10dp"
            android:stateListAnimator="@null"
            android:text="GET STARTED"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold" />


    </RelativeLayout>

</RelativeLayout>

