<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".GetStarted" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:adjustViewBounds="true"
            android:src="@drawable/get_started" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/img"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:maxLines="13"
                android:minLines="5"
                android:text="A Mobile Application for Disaster Warning and Risk Communication in the City of San Jose del Monte. This app is intended to inform users about disaster occurrences. It allows users to locate the nearest evacuation centers in their area. The app offers features such as in-app and SMS alert notifications, adding trusted contacts, access to emergency and rescue team hotlines, and preparedness tips."
                android:textAlignment="center"
                android:textColor="@color/black"
                app:autoSizeMaxTextSize="80dp"
                app:autoSizeMinTextSize="10dp"
                app:autoSizeStepGranularity="1dp"
                app:autoSizeTextType="uniform" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGetStarted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/rounded_button"
                android:padding="10dp"
                android:stateListAnimator="@null"
                android:text="GET STARTED"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>

</ScrollView>

