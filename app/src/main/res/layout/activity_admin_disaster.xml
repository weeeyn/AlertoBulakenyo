<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Admin_Disaster">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ff5003" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal"
        android:paddingTop="40dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="@font/archivo_black"
            android:gravity="center"
            android:maxLines="1"
            android:text="WARNING"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30dp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCreateWarning"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/button2"
                android:stateListAnimator="@null"
                android:text="Create New Warning"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/imgEarthquake"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginEnd="5dp"
                        android:background="#FFFFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/earthquake" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/imgFire"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="5dp"
                        android:background="#FFFFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/fire" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/imgFlood"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginEnd="5dp"
                        android:background="#FFFFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/flood" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/imgLandslide"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_marginStart="5dp"
                        android:background="#FFFFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/landslide" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/imgTyphoon"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:background="#FFFFFFFF"
                        android:scaleType="fitCenter"
                        android:src="@drawable/typhoon" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>