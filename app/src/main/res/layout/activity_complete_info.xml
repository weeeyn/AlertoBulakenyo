<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".completeInfo">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="301dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="-95dp"
        android:adjustViewBounds="true"
        android:src="@drawable/reg_top" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="360dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-50dp"
        android:layout_marginEnd="-4dp"
        android:layout_marginBottom="-160dp"
        android:adjustViewBounds="true"
        android:src="@drawable/reg_bot" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginBottom="5dp"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/archivo_black"
            android:text="Complete your Information"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="#003366"
            android:maxLines="3"
            app:autoSizeMaxTextSize="80dp"
            app:autoSizeMinTextSize="35dp"
            app:autoSizeStepGranularity="1dp"
            app:autoSizeTextType="uniform" />

        <EditText
            android:id="@+id/etContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text"
            android:hint="Contact Number"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textColor="#003366"
            android:textColorHint="#8091A3"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etHouseStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text"
            android:hint="House No. and Street Name"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textColor="#003366"
            android:textColorHint="#8091A3"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text"
            android:hint="City / Municipality"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:spinnerMode="dropdown"
            android:textColor="#003366"
            android:textColorHint="#8091A3"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/etBrgy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text"
            android:hint="Barangay"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:textColor="#003366"
            android:textColorHint="#8091A3"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/etProvince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/edit_text"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:text="Province: BULACAN"
            android:textColor="#003366"
            android:textColorHint="#8091A3"
            android:textSize="18dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:text="Pin Your Location:"
            android:textColor="#8091A3"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginVertical="10dp"
            android:background="@drawable/edit_text" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_button"
            android:padding="10dp"
            android:stateListAnimator="@null"
            android:text="Done"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>